# Flask Configuration
FLASK_SECRET_KEY=your-secure-random-secret-key-here
FLASK_APP=app.py
FLASK_ENV=production

# Database Configuration (Required for Vercel)
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require
POSTGRES_URL=postgresql://username:password@host:port/database?sslmode=require

# Prisma Configuration (if using Prisma ORM)
PRISMA_DATABASE_URL=prisma+postgres://accelerate.prisma-data.net/?api_key=your-prisma-api-key

# PostgreSQL SSL Configuration
PG_SSLMODE=require

# Vercel Environment Variables (Automatically set by Vercel)
VERCEL_ENV=production
VERCEL_URL=https://your-app-name.vercel.app

# Flask Security Settings
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# Logging Configuration
LOG_LEVEL=INFO

# Application Settings
APP_NAME=LoopIn
